<Window x:Class="CharpterEditer.ChapterEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChapterEdit" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"></RowDefinition>
            <RowDefinition Height="20*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"></ColumnDefinition>
            <ColumnDefinition Width="50*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="txtSource" Grid.Row="0" Grid.Column="0"></TextBox>
        <TextBox x:Name="txtReplace" Grid.Row="0" Grid.Column="1"></TextBox>
        <Button x:Name="btnEdit" Grid.Row="1" Grid.Column="0" Content="替换" Click="btnEdit_Click"></Button>
        <Button x:Name="btnCancel" Grid.Row="1" Grid.Column="1" Content="取消"></Button>
    </Grid>
</Window>
